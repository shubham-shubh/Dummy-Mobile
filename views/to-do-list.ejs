<html lang="en" dir="ltr">
   <head>
      <meta charset="utf-8">
      <title>To_Do_List</title>
      <link rel="stylesheet" href="../css/to-do-list.css">
   </head>
   <body>
   <div class="box" id="heading">
   <h1><%= kindofday %></h1>
   </div>
   <div class="box">
      <%for(var i=0;i<list.length;i++){%>
          <form  action="/notes/to-do-list/delete" method="post">
           <div class="item">
            <input type="checkbox" name="checkbox" value="<%= list[i]._id %>" onChange="this.form.submit()">
           <p><%= list[i].name%></p>
        </div>
      </form>
      <%}%>
         <form class="item" action="/notes/to-do-list" method="post">
         <input type="text" name="todo" autocomplete="off">
         <button type="submit" name="button">+</button>
   </div>

   </form>
