<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Number Guessing Game</title>

	<style>
		body {
			font-family: sans-serif;
			width: 50%;
			max-width: 800px;
			min-width: 480px;
			margin: 0 auto;
		}
  #main{
  	width: 70%;
		align-items: center
  }
	</style>
</head>

<body>
	<div id="main">
	<h1 style="font-family: monospace; font-size: 50px; text-align: center">Guess Number</h1>
	<p>
		We have selected a random number
		between 1 - 10. See if you can
		guess it.
	</p>

	<div class="form">
		<form>
		<label for="guessField">
			Enter a guess:
		</label>

		<input type="text" id="guessField"
			class="guessField">

		<input type="submit" value="Submit guess"
			class="guessSubmit" id="submitguess">
				</form>
	</div>
</div>
	<script type="text/javascript">

		// Generate a Random Number
		let y = Math.floor(Math.random() * 10 + 1);

		// Counting the number of guesses
		// made for correct Guess
		let guess = 1;

		document.getElementById("submitguess").onclick = function () {

			// Number guessed by user
			let x = document.getElementById("guessField").value;

			if (x == y) {
				alert("CONGRATULATIONS!!! YOU GUESSED IT RIGHT IN "
					+ guess + " GUESS ");
			}

			/* If guessed number is greater than actual number*/
			else if (x > y) {
				guess++;
				alert("OOPS SORRY!! TRY A SMALLER NUMBER");
			}
			else {
				guess++;
				alert("OOPS SORRY!! TRY A GREATER NUMBER")
			}
		}

    document.addEventListener("dblclick",function(){
      window.location.replace(
    "http://localhost:3000/games"
    );
  });
	</script>
</body>
</html>
